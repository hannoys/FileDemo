<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.edu.gdmec.a07150817.filedemo.MainActivity"
    android:orientation="vertical">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PhoneDicetory"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:onClick="phoneDirectory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExternalStoragePublicDirectory"
        android:id="@+id/ExternalStoragePublicDirectory"
        android:layout_gravity="center_horizontal"
        android:onClick="ExternalStoragePublicDirectory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExternalStorageDirectory"
        android:id="@+id/ExternalStorageDirectory"
        android:layout_gravity="center_horizontal"
        android:onClick="ExternalStorageDirectory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataStorage"
        android:id="@+id/DataStorage"
        android:layout_gravity="center_horizontal"
        android:onClick="DataStorage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DownloadCacheDirectory"
        android:id="@+id/DownloadCacheDirectory"
        android:layout_gravity="center_horizontal"
        android:onClick="DownloadCacheDirectory"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RootDirectory"
        android:id="@+id/RootDirectory"
        android:layout_gravity="center_horizontal"
        android:onClick="RootDirectory"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/result"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
